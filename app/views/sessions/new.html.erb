
<%= form_for(:session, :url => sessions_path) do |f| %>
	<table class="field">
	<tr>  
	    <td><%= f.label :email %> </td>
	    <td><%= f.text_field :email %></td>
  	</tr>
	<tr>  	
  		<td><%= f.label :password %></td> 
    	<td><%= f.password_field :password %></td>
  	</tr>
	<tr> 	
  	  <td></td><td></td><td><%= f.submit "Sign in" %></td>
  	</tr>
  	</table> 
<% end %>

<p>New customers <%= link_to "Sign up here", signup_path %></p>